{
  "manifest_version": 3,
  "name": "YouTube Playlist Manager",
  "version": "1.0.0",
  "description": "Manage YouTube playlists by selecting, filtering, moving, or removing videos in bulk.",
  "permissions": [
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.youtube.com/playlist*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "128": "icons/icon128.png"
  }
}